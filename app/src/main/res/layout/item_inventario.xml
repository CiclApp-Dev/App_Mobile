<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:id="@+id/imagenLoca"
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:padding="2dp" />

        <TextView
            android:id="@+id/MarcaDelTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imagenLoca"
            android:text="Samsung"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/espacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/MarcaDelTelefono"
            android:layout_above="@id/Reparabilidad"
            android:text=" "
            android:textSize="12sp" />

        <TextView
            android:id="@+id/ModeloDelTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/espacio"
            android:layout_above="@id/Reparabilidad"
            android:text="Galaxy S7 Edge"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Reparabilidad"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MarcaDelTelefono"
            android:layout_toEndOf="@+id/imagenLoca"
            android:text="Camara trasera"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Color"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Reparabilidad"
            android:layout_toEndOf="@+id/imagenLoca"
            android:text="Blanco"
            android:textSize="10sp" />

        <Button
            android:id="@+id/boton_sumar"
            android:layout_width="40dp"
            android:layout_marginTop="5dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/Cantidad"
            android:background="@drawable/boton_sumar"
            android:backgroundTint="@color/colorLightGray" />

        <TextView
            android:id="@+id/Cantidad"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@+id/boton_restar"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="720 "
            android:textSize="14sp" />

        <Button
            android:id="@+id/boton_restar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/Reparabilidad"
            android:background="@drawable/ic_minus_svgrepo_com"
            android:backgroundTint="@color/colorLightGray" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>