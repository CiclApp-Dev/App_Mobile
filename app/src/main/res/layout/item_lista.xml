<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:layout_marginBottom="10dp" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="50dp"
            android:padding="2dp"
            android:id="@+id/imagenLoca"/>

        <TextView
            android:id="@+id/MarcaDelTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/imagenLoca"
            android:text="1"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/ModeloDelTelefono"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/MarcaDelTelefono"
            android:text="2"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/Reparabilidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/MarcaDelTelefono"
            android:layout_toEndOf="@+id/imagenLoca"
            android:text="3"
            android:textSize="14sp" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>